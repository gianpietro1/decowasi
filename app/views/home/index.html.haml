.row.margin-home
	#slide
		%ul.slideme
			- @sliders.each do |slider|
				%li
					%a{href: '#', class:'slider_link'}
						.slider_image
							= image_tag(slider.image)
							.slider_text
								= slider.title

.row
	.col-md-1
	.col-md-10
		.search
			= text_field_tag :search, params[:search], placeholder: "busca ideas, especialistas y productos", size: 150, class: 'search-field'
	.col-md-1

.row
	#featured
		- @projects.each do |featured|
			.featured
				.featured_image
					%a{href: user_path(featured.user)}
						= image_tag(featured.image)
				.featured_content
					.featured_text.col
						.featured_title
							= featured.title
						.featured_description
							= featured.description
					- if current_user
						.featured_social.col
							%a{href:'javascript:;'}
								- unless current_user.likes.where(project_id: featured.id).first.nil?
									%i.fa.fa-heart.heart_clicked{"aria-hidden":"true",id:featured.id}
								- else
									%i.fa.fa-heart{"aria-hidden":"true",id:featured.id}
							%span{id:"likes-#{featured.id}"}
								= featured.likes.count
							%a{href:'javascript:;'}
								%i.fa.fa-star{"aria-hidden":"true"}
							%a{href:'javascript:;'}
								%i.fa.fa-share{"aria-hidden":"true"}

